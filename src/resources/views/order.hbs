<div class="container d-flex justify-content-center">

    <div class="checkout-form">
        <div class="container">
            <div class="text-center">
                <h2>Customer Information</h2>
            </div>
        </div>
        <div class="checkout-content-form container">
            <div>
                <div class="d-flex flex-row pl-3 py-2">
                    <div style="color: #fac564;">Full name :</div>
                    <div class="ml-2">{{customers.fullname}}</div>
                </div>
                <div class="d-flex flex-row pl-3 py-2">
                    <div style="color: #fac564;">Mail :</div>
                    <div class="ml-2">{{customers.mail}}</div>
                </div>
                <div class="d-flex flex-row pl-3 py-2">
                    <div style="color: #fac564;">Phone :</div>
                    <div class="ml-2">{{customers.phone}}</div>
                </div>
                <div class="d-flex flex-row pl-3 py-2">
                    <div style="color: #fac564;">Address :</div>
                    <div class="ml-2">{{customers.address}}</div>
                </div>
            </div>
            
        </div> 
        <div class="cart">
                    <!--    <ul class="tableHead">
                            <li class="prodHeader">Product</li>
                            <li>Quantity</li>
                            <li>Total</li>
                            <li>Remove</li>
                        </ul>-->
                    <ul>

                    {{#each sessions.cart}}
                        <li class="items odd">
                            <div class="infoWrap"> 
                                <div class="cartSection">
                                    <img src={{this._id.image}} alt="" class="itemImg" />
                                    <p class="itemNumber"></p>
                                    <h3>{{this._id.name}}</h3>
                                    <p>{{this.qty}} x </p> 
                                </div>                    
                                <div class="prodTotal cartSection">
                                    <p>{{this._id.cost}}.000d</p>
                                </div>
                            </div>
                        </li>
                    {{/each}}
                    
                    <!--<li class="items even">Item 2</li>-->
            
            </ul>
        </div>  
    </div>

</div>


